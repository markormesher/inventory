extends ../_shared/page-layout

block page-head
	link(rel = 'stylesheet', href = '/_npm/datatables.net-bs/css/dataTables.bootstrap.css')

block page-body

	div.row: div.col-xs-12: div.x_panel
		div.x_title
			h2 Manage Users

			if user.hasPermission(PERMISSIONS.USERS.CREATE)
				div.panel_toolbox.btn-group.btn-group-sm
					a.btn.btn-success(href = '/users/edit')
						i.fa.fa-user-plus
						| Create User

			div.clearfix

		div.x_content
			table#users.table.table-hover
				thead
					tr
						th Username
						th Display Name
						th Actions

block page-scripts
	script(src = '/_npm/datatables.net/js/jquery.dataTables.js')
	script(src = '/_npm/datatables.net-bs/js/dataTables.bootstrap.js')
	script(src = '/users/bundle.js')
